# Cache Control Headers for FiberOMS Insight PWA
# Optimized for Cloudflare Pages with aggressive cache busting

# HTML files - NEVER cache to ensure users get updates
/
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Expires: 0
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  CDN-Cache-Control: no-store
  Cloudflare-CDN-Cache-Control: no-store

/index.html
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Expires: 0
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  CDN-Cache-Control: no-store
  Cloudflare-CDN-Cache-Control: no-store

# Service Worker - CRITICAL: must not be cached
/sw.js
  Cache-Control: max-age=0, must-revalidate, s-maxage=0
  Service-Worker-Allowed: /
  CDN-Cache-Control: no-store
  Cloudflare-CDN-Cache-Control: no-store

/service-worker.js
  Cache-Control: max-age=0, must-revalidate, s-maxage=0
  Service-Worker-Allowed: /
  CDN-Cache-Control: no-store
  Cloudflare-CDN-Cache-Control: no-store

# Workbox files - no cache
/workbox-*.js
  Cache-Control: max-age=0, must-revalidate, s-maxage=0
  CDN-Cache-Control: no-store
  Cloudflare-CDN-Cache-Control: no-store

# Manifest - short cache
/manifest.json
  Cache-Control: public, max-age=300, must-revalidate
  
# Vite generates hashed assets - cache forever
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  
# Non-hashed JS/CSS - short cache with ETag
/*.js
  Cache-Control: public, max-age=3600, must-revalidate
  ETag: true
  
/*.css
  Cache-Control: public, max-age=3600, must-revalidate
  ETag: true

# Static assets - longer cache but with revalidation
/icons/*
  Cache-Control: public, max-age=86400, must-revalidate
  
/favicon.ico
  Cache-Control: public, max-age=86400, must-revalidate
  
/*.png
  Cache-Control: public, max-age=86400, must-revalidate
  
/*.svg
  Cache-Control: public, max-age=86400, must-revalidate

# Font files - longer cache
/*.woff
  Cache-Control: public, max-age=2592000
  
/*.woff2
  Cache-Control: public, max-age=2592000

# API routes - no cache for dynamic content
/api/*
  Cache-Control: no-cache, no-store, must-revalidate 